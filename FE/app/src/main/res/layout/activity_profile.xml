                        </LinearLayout>

                        <!-- Longest Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stat_card"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/tvLongestStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#FF6B35" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ká»· lá»¥c"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ngÃ y"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Learned Today Badge -->
                    <TextView
                        android:id="@+id/tvLearnedToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="âœ… ÄÃ£ há»c hÃ´m nay!"
                        android:textSize="14sp"
                        android:textColor="@color/published_green"
                        android:background="@drawable/bg_chip"
                        android:visibility="gone" />

                    <!-- Streak loading -->
                    <ProgressBar
                        android:id="@+id/progressStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Study Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Chart Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“Š Thá»i gian há»c má»—i ngÃ y"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <!-- Days selector chips -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip7Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7N"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:checked="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip14Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14N"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip30Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30N"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Chip.Filter" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <!-- Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" />

                    <!-- Chart empty state -->
                    <TextView
                        android:id="@+id/tvChartEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="ChÆ°a cÃ³ dá»¯ liá»‡u há»c táº­p"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone" />

                    <!-- Chart loading -->
                    <ProgressBar
                        android:id="@+id/progressChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

